{
  "permissions": {
    "allow": [
      "WebSearch",
      "WriteFile:*",
      "ReadFile:*",
      "WebFetch(domain:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(pwd:*)",
      "Bash(echo:*)",
      "Bash(git:status)",
      "Bash(git:diff:*)",
      "Bash(git:log:*)",
      "Bash(git:show:*)",
      "Bash(git:add:*)",
      "Bash(git:commit:*)",
      "Bash(git:checkout:*)",
      "Bash(git:stash:*)",
      "Bash(npm install:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue close:*)",
      "Bash(chmod:*)",
      "Bash(git fetch:*)",
      "Bash(grep -E:*)",
      "Bash(pip install:*)",
      "Bash(node:*)"
    ],
    "deny": [],
    "ask": [
      "Bash(python:*)",
      "Bash(py:*)",
      "Bash(py --version)",
      "Bash(where python)",
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git clean:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "sonnet",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_TELEMETRY": "1",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 \"%USERPROFILE%\\.claude\\hooks\\clean_commit_guard.py\""
          },
          {
            "type": "command",
            "command": "py -3 \"%USERPROFILE%\\.claude\\hooks\\github_issue_guard.py\""
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 \"%USERPROFILE%\\.claude\\hooks\\protect_claude_md.py\""
          }
        ]
      },
      {
        "matcher": "git_commit",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 \"%USERPROFILE%\\.claude\\hooks\\clean_commit_guard.py\""
          }
        ]
      },
      {
        "matcher": "mcp__github__create_issue|mcp__github__add_issue_comment|mcp__github__update_issue",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 \"%USERPROFILE%\\.claude\\hooks\\github_issue_guard.py\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "includeCoAuthoredBy": false
}