{
  "model": "sonnet",
  "permissions": {
    "allow": [
      "WriteFile:*",
      "ReadFile:*",
      "WebFetch(*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(pwd:*)",
      "Bash(echo:*)",
      "Bash(git:status)",
      "Bash(git:diff*)",
      "Bash(git:log*)",
      "Bash(git:show*)",
      "Bash(git:add*)",
      "Bash(git:commit*)",
      "Bash(git:checkout*)",
      "Bash(git:stash*)",
      "Bash(chmod:*)",
      "Bash(rm:*)",
      "Bash(py --version)",
      "Bash(where python)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(python:*)",
      "Bash(pip install:*)",
      "Bash(py:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "py -3 ~/.claude/hooks/sync_docs_on_start.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 ~/.claude/hooks/prevent_claude_commits.py"
          },
          {
            "type": "command",
            "command": "py -3 ~/.claude/hooks/secret_scanner.py"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 ~/.claude/hooks/protect_claude_md.py"
          }
        ]
      }
    ]
  }
}